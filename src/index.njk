{% extends "src/base.njk" %}

{% block head %}
<title>Lab Municipal | Red Ciudadana</title>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}

{% block content %}

        <!-- Slider
		============================================= -->
		<section id="slider" class="slider-element px-2">
			<div class="container" style="padding: 0 0;">
                <div class="row my-6 align-items-center">
                    <div class="col-lg-5 my-4">
                        <h1 class="text-titles" style="font-size: 60px!important;line-height: 60px;">Laboratorio Municipal</h1>
                        <p class="my-4" style="font-size: 25px!important;">
                            Innovación y Desarrollo Económico Local para un Futuro Digital<br>
                        </p>
                        <a class="btn" href="#">Convocatoria para el Programa de Asistencia Técnica 2025</a>
                    </div>
                    <div class="col-lg-7 my-4">
                        <img style="width: 120%;" src="/assets/img/elementos_mejoras/LAB MUNICIPAL.png">
                    </div>
                </div>
			</div>
        </section>

        <!-- Cintillo destacado
        ============================================= -->
        <section class="px-2" style="background-color: #fff;">
            <div class="container clearfix ">
                <div class="row py-6 justify-content-center">
                    <div class="col-lg-8 my-4 text-center">
                        <h1 style="font-size: 40px;">Se parte de nuestro Programa de Asistencia Técnica 2025</h1>
                    </div>
                </div>
            </div>
        </section>

        <!-- Lineas de Accion
        ============================================= -->

        <section class="px-2" style="background-color: #03324e;">
            <div class="container clearfix ">
                <div class="row py-6">
                    <div class="col-lg-12 text-center mb-4">
                        <h1 class="text-titles2-5">Componentes</h1>
                    </div>
                    <div class="col-lg-4 my-4 text-center">
                        <div class="bg-white-green h-100 p-5" style="border-radius: 10px;">
                            <img src="/assets/img/elementos_mejoras/INTEROPERABILDIAD_GD-19.png" style="width: 120px; height: 120px; margin: auto;">
                            <h1 class="text-titles">Programa de Formación</h1>
                            <p class="mt-4">
                                Capacitación y desarrollo de capacidades en gestión digital municipal
                            </p>
                        </div>
                    </div>

                    <div class="col-lg-4 my-4 text-center">
                        <div class="bg-white-green h-100 p-5" style="border-radius: 10px;">
                            <img src="/assets/img/elementos_mejoras/INTEROPERABILDIAD_GD-20.png" style="width: 120px; height: 120px; margin: auto;">
                            <h3 class="text-titles">Mediciones y Evaluación</h3>
                            <p class="mt-4">
                                Diagnósticos y seguimiento del desempeño de las municipalidades
                            </p>
                        </div>
                    </div>

                    <div class="col-lg-4 my-4 text-center">
                        <div class="bg-white-green h-100 p-5" style="border-radius: 10px;">
                            <img src="/assets/img/elementos_mejoras/INTEROPERABILDIAD_GD-21.png" style="width: 120px; height: 120px; margin: auto;"> 
                            <h3 class="text-titles">Centro de Asistencia Técnica</h3>
                            <p class="mt-4">
                                Herramientas digitales y metodologías innovadoras para la transformación digital
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </section>

        <!-- Que es
        ============================================= -->

        <section class="px-2" style="background-color: #fff;">
            <div class="container clearfix ">
                <div class="row align-items-center">
                    <div class="col-lg-6 my-4">
                        <h1 class="text-titles">¿Qué es el Laboratorio Municipal?</h1>
                        <p class="mt-4">
                            El <b>Laboratorio Municipal</b> laboratorio Municipal de Red Ciudadana busca fortalecer las capacidades técnicas y tecnológicas de las municipalidades para fomentar la gestión local innovadora y sostenible, mediante proyectos de alto impacto comunitario y la promoción de alianzas estratégicas entre sectores clave.
                        </p>
                        <!-- <p class="mt-4">
                            <strong>
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Netus et malesuada fames ac turpis egestas. Gravida cum sociis natoque penatibus et.
                            </strong>
                        </p> -->
                    </div>

                    <div class="col-lg-6 my-4">
                        <img src="/assets/img/elementos_mejoras/LAB MUNICIPAL.png"> 
                    </div>

                </div>
            </div>
        </section>

        <!-- Municipios
        ============================================= -->

        <section class="px-2 pt-5" style="background-color: #e9f0f8;">
            <div class="container clearfix ">
                <div class="row pt-5 justify-content-center">
                    <div class="col-lg-12 text-center">
                        <h1 class="text-titles">Explora los Detalles de Cada Municipio - DataMunicipal</h1>
                        <p class="mt-4">Accede a un perfil completo de cada uno de los 340 municipios de Guatemala. En esta sección, encontrarás información esencial organizada en categorías clave como salud, educación, transparencia, pobreza, y más. </p>
                    </div>
                    <div class="col-lg-12 my-4">
                        <div class="row">
							{% for municipio in collections.municipio | limit(8) %}
                            <div class="col-lg-3 my-2 municipio-item">
                                <a href="{{municipio.url}}">
                                    <div class="municipio_box">
                                        <!-- <img src="/assets/images/placeholder2.png"> -->
                                        <div class="text">
                                            <h2><i class="fa-solid fa-circle-dot"></i> Departamento: </h2>
                                            <p>{{municipio.data.municipio.departamento}}</p>
                                            <h2><i class="fa-solid fa-circle-dot"></i> Municipio: </h2>
                                            <p>{{municipio.data.municipio.municipio}}</p>
                                            <h2><i class="fa-solid fa-circle-dot"></i> Partido: </h2>
                                            <p>{{ municipio.data.municipio.adjudicaciones.adjudicaciones[0].corporacion_municipal | capitalize}}</p>
                                            <h2><i class="fa-solid fa-circle-dot"></i> Alcalde: </h2>
                                            <p>{{ municipio.data.municipio.adjudicaciones.adjudicaciones[0].nombre | capitalize}}</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="col-lg-12 my-4 text-center">
                        <a href="/municipios/index.html" class="btn">Ver más</a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Apoyo
        ============================================= -->

        <section class="px-2" style="background-color: #fff;">
            <div class="container clearfix ">
                <div class="row align-items-center">
                    <div class="col-lg-6 my-4 m-auto">
                        <img src="/assets/img/elementos_mejoras/apoyo.png">
                    </div>
                </div>
            </div>
        </section>

{% endblock %}

